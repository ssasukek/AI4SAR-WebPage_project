{
  "key": "sar131",
  "title": "Individual Availability Assignment (SAR 131)",
  "sections": [
    {
      "heading": "Incident Info",
      "fields": [
        {
          "label": "Incident Name",
          "name": "incidentName",
          "type": "text",
          "placeholder": "Incident Name"
        },
        {
          "label": "Incident Date",
          "name": "incidentDate",
          "type": "date",
          "placeholder": "incidentDate"
        },
        {
          "label": "Incident Number",
          "name": "incidentNumber",
          "type": "number",
          "placeholder": "Incident Number"
        },
        {
          "label": "Operational Period",
          "name": "operationalPeriod",
          "type": "text",
          "placeholder": "Operational Period"
        }
      ]
    },
    {
      "heading": "Preparation Info",
      "fields": [
        {
          "label": "Date Prepared",
          "name": "datePrepared",
          "type": "date"
        },
        {
          "label": "Time Prepared",
          "name": "timePrepared",
          "type": "time"
        }
      ]
    },
    {
      "heading": "Individual Info",
      "fields": [
        { "label": "Name",
          "name": "name",
          "type": "text" },
        {
          "label": "Team Affiliation",
          "name": "teamAffiliation",
          "type": "text"
        }
      ]
    },
    {
      "heading": "Rest and Rehabilitation",
      "fields": [
        {
          "label": "How Many Hours Since You Last Slept?",
          "name": "hoursSinceLastSlept",
          "type": "number"
        },
        {
          "label": "How Many Hours of Sleep Have You Had in the Last 24 Hours?",
          "name": "hoursOfSleepInLast24Hours",
          "type": "number"
        },
        {
          "label": "When Was Your Last Meal?",
          "name": "lastMeal",
          "type": "textarea"
        },
        {
          "label": "Describe Any Illness Or Injury Related To This Incident",
          "name": "illnessOrInjury",
          "type": "textarea"
        }
      ]
    },
    {
      "heading": "Availability",
      "fields": [
        {
          "table": true,
          "columns": [
            {
              "name": "Available for Reassignment?",
              "type": "checkbox"
            },
            {
              "name": "Estimated Date When You Will Be Available",
              "type": "date"
            },
            {
              "name": "Estimated Time When You Will Be Available",
              "type": "time"
            }
          ],
          "rows": ["Current Operational Period", "Future Operational Period"]
        },
        {
          "label": "Not Available for Reassignment (Departing From Incident)",
          "name": "notAvailableForReassignment",
          "type": "checkbox"
        }
      ]
    },
    {
      "heading": "Departure And Arrival",
      "fields": [
        {
          "table": true,
          "columns": [
            {
              "name": "Estimated Time of Departure",
              "type": "time"
            },
            {
              "name": "Estimated Time of Arrival at Destination",
              "type": "time"
            }
          ],
          "rows": [" "]
        },
        {
          "table": true,
          "columns": [
            {
              "name": " ",
              "type": "checkbox"
            }
          ],
          "rows": [
            "Will You Be Driving?",
            "Will There Be Other People in the Vehicle With You?",
            "Is Another Person Available to Share Driving?",
            "Have You Had Less Than Five Hours of Sleep in the Last 24 Hours?",
            "Are You Currently Feeling Awake and Alert?",
            "Will You Be in a Convoy With Other Vehicles?",
            "Do You Have Radio Communications With the Convoy?",
            "Have You Taken Any Medications, Drugs or Alcohol That May Impair Your Ability to Drive?",
            "Do You Promise to Pull Over and Take a Nap if You Become Sleepy?"
          ]
        }
      ]
    },
    {
      "heading": "Validation",
      "fields": [
        {
          "label": "Signature of Individual",
          "name": "signatureOfIndividual",
          "type": "text"
        },
        {
          "label": "Approved by Safety",
          "name": "approvedBySafety",
          "type": "text"
        }
      ]
    }
  ]
}
